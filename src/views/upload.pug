extend base

block content 
    span=errorMessage
    h1 upload video
    form(method="POST", enctype="multipart/form-data")
        label(for="video") Video File
        input(type="file", accept="video/*", required, id="video", name="video")
        input(name="title",placeholder="title",require, maxlength=20)
        input(name="description",placeholder="description",require, maxlength=80)
        input(name="hashtags",placeholder="hashtags",require)
        input(type="submit")